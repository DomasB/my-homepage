<section id="portfolio">
  <div class="container">
    <div class="panel panel-primary">
      <div class="panel-heading"><strong><i class="fa fa-gamepad" aria-hidden="true"></i> Portfolio</strong></div>
      <div class="panel-body">
        {{#each projects}}
        <div class="thumbnail">
          <img src="/images/{{this.image}}" alt="{{this.name}}" class="img-responsive">
          <div class="caption">
            <h3><a href="{{this.link}}" target="_blank">{{this.name}}</a></h3>
            <p>{{this.desc}}</p>
          </div>
        </div>
      {{/each}}
      </div>
    </div>
  </div>
</section>
